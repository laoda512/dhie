<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/rgOccursMode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:layout_gravity="center">

        <RadioButton
            android:id="@+id/rbOccursOnce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/alarm_occurs_once" />

        <RadioButton
            android:id="@+id/rbOccurs3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/alarm_occurs_times3" />

        <RadioButton
            android:id="@+id/rbOccurs5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alarm_occurs_times5" android:layout_gravity="center" android:gravity="center"/>

        <RadioButton
            android:id="@+id/rbOccursN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alarm_occurs_n" android:layout_gravity="center" android:gravity="center"/>

    </RadioGroup>

