<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_frame_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

<RelativeLayout  android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
    <LinearLayout
        android:id="@+id/linearLayoutAlarmTime"
        android:layout_width="252dp"
        android:layout_height="155dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:paddingBottom="30dp"
        android:paddingTop="10dp" >

        <RelativeLayout
            android:id="@+id/wheel_left"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:background="@drawable/bg_timer_left"
            android:gravity="center_vertical" >

            <kankan.wheel.widget.WheelView
                android:id="@+id/hh"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center" >
            </kankan.wheel.widget.WheelView>

            <TextView
                android:id="@+id/mmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
               android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="时" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/wheel_middle1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
             android:background="@drawable/bg_timer_right"
            android:gravity="center_vertical" >

            <kankan.wheel.widget.WheelView
                android:id="@+id/mm"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center" />

            <TextView
                android:id="@+id/mmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                 android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="分" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dayPicker"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayoutAlarmTime"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/weekdaySet11"
                android:layout_width="125dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_alarmset_weekdaychoose"
                android:clickable="true"
                android:gravity="center"
                android:text="工作日"
                android:textColor="@drawable/tvc_alarmset_weekdaychoose" />

            <View
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:background="@drawable/gray" />

            <TextView
                android:id="@+id/weekdaySet12"
                android:layout_width="125dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_alarmset_weekdaychoose"
                android:clickable="true"
                android:gravity="center"
                android:text="已关闭"
                 android:textColor="@drawable/tvc_alarmset_weekdaychoose" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@drawable/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/weekdaySet21"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_weight="0.33"
                android:background="@drawable/btn_alarmset_weekdaychoose"
                android:clickable="true"
                android:gravity="center"
                android:text="全选"
                android:textColor="@drawable/tvc_alarmset_weekdaychoose" />

            <View
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:background="@drawable/gray" />

            <TextView
                android:id="@+id/weekdaySet22"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_weight="0.33"
                android:background="@drawable/btn_alarmset_weekdaychoose"
                android:clickable="true"
                android:gravity="center"
                android:text="周日"
                android:textColor="@drawable/tvc_alarmset_weekdaychoose" />

            <View
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:background="@drawable/gray" />

            <TextView
                android:id="@+id/weekdaySet23"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_weight="0.33"
                android:background="@drawable/btn_alarmset_weekdaychoose"
                android:clickable="true"
                android:gravity="center"
                android:text="反选"
                 android:textColor="@drawable/tvc_alarmset_weekdaychoose" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@drawable/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/weekdaySet31"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_weight="0.33"
                android:background="@drawable/btn_alarmset_weekdaychoose"
                android:clickable="true"
                android:gravity="center"
                android:text="周一"
                 android:textColor="@drawable/tvc_alarmset_weekdaychoose" />

            <View
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:background="@drawable/gray" />

            <TextView
                android:id="@+id/weekdaySet32"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_weight="0.33"
                android:background="@drawable/btn_alarmset_weekdaychoose"
                android:clickable="true"
                android:gravity="center"
                android:text="周二"
                 android:textColor="@drawable/tvc_alarmset_weekdaychoose"/>

            <View
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:background="@drawable/gray" />

            <TextView
                android:id="@+id/weekdaySet33"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_weight="0.33"
                android:background="@drawable/btn_alarmset_weekdaychoose"
                android:clickable="true"
                android:gravity="center"
                android:text="周三"
                android:textColor="@drawable/tvc_alarmset_weekdaychoose" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@drawable/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/weekdaySet41"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_weight="0.33"
                android:background="@drawable/btn_alarmset_weekdaychoose"
                android:clickable="true"
                android:gravity="center"
                android:text="周四"
                android:textColor="@drawable/tvc_alarmset_weekdaychoose" />

            <View
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:background="@drawable/gray" />

            <TextView
                android:id="@+id/weekdaySet42"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_weight="0.33"
                android:background="@drawable/btn_alarmset_weekdaychoose"
                android:clickable="true"
                android:gravity="center"
                android:text="周五"
                android:textColor="@drawable/tvc_alarmset_weekdaychoose" />

            <View
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:background="@drawable/gray" />

            <TextView
                android:id="@+id/weekdaySet43"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_weight="0.33"
                android:background="@drawable/btn_alarmset_weekdaychoose"
                android:clickable="true"
                android:gravity="center"
                android:text="周六"
                 android:textColor="@drawable/tvc_alarmset_weekdaychoose"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_height="60dp"
        android:layout_width="wrap_content"
        android:layout_alignLeft="@id/dayPicker"
        android:layout_alignRight="@id/dayPicker"
        android:layout_below="@id/dayPicker"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/cancel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/smiley_item_bg_press_s"
            android:text="取消"
            android:textColor="#000"
               android:gravity="center"
            android:layout_marginRight="5dp"
            android:textColorHighlight="#797979" />

        <TextView
            android:id="@+id/confirm"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/smiley_item_bg_press_s"
            android:text="保存"
            android:gravity="center"
            android:textColor="#000"
             android:layout_marginLeft="5dp"
            android:textColorHighlight="#797979" />
    </LinearLayout>
</RelativeLayout>
