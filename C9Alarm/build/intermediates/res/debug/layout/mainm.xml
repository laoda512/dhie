<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutMain"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btStop"
        android:background="@drawable/bg_main"
        android:baselineAligned="false"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.5" >

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5" >

                    <include
                        android:id="@+id/include1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        layout="@layout/maintl" />

                    <include
                        android:id="@+id/include2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        layout="@layout/maintr" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5" >

                    <View
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:visibility="invisible" />

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent" >

                        <include
                            android:id="@+id/include3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            layout="@layout/mainbl" />

                        <include
                            android:id="@+id/include4"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            layout="@layout/mainbr" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <View
                android:id="@+id/imageView1"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_center" />

            <com.tavx.C9Alarm.CenterCirView
                android:id="@+id/analogClock1"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_centerInParent="true"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageView_cirtl"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignLeft="@+id/imageView1"
                android:layout_alignTop="@+id/imageView1"
                 />

            <ImageView
                android:id="@+id/imageView_cirtr"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignRight="@+id/imageView1"
                android:layout_alignTop="@+id/imageView1"
                android:src="@drawable/pgcirtr" />

            <ImageView
                android:id="@+id/imageView_cirbl"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignBottom="@+id/imageView1"
                android:layout_alignLeft="@+id/imageView1"
                android:src="@drawable/pgcirbl" />

            <ImageView
                android:id="@+id/imageView_cirbr"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignBottom="@+id/imageView1"
                android:layout_alignRight="@+id/imageView1"
                android:src="@drawable/pgcirbr" />
        </RelativeLayout>

        <include
            android:id="@+id/includeButtons"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/linearLayout1"
            layout="@layout/layout_buttons" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/Users/cwang/Documents/workspace_a/C9Alarm/res/layout/mainm.xml -->