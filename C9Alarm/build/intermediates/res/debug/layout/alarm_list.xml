<?xml version="1.0" encoding="UTF-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayoutAlarmList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayoutAddAlarm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivAddAlarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_clock_add_alarm" android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tvAddAlarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_alarm" android:textSize="24sp" android:layout_gravity="center" android:gravity="center"/>

        </LinearLayout>

        <ListView
            android:id="@+id/listViewAlarm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </ListView>

    </LinearLayout>
