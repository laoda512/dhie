<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayoutAlarmMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayoutAlarmTime"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/wheel_left"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:gravity="center_vertical" >

                <kankan.wheel.widget.WheelView
                    android:id="@+id/hh"
                    android:layout_width="fill_parent"
                    android:layout_height="126dp"
                    android:gravity="center" >
                </kankan.wheel.widget.WheelView>
                 <TextView
                    android:id="@+id/mmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="时"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/wheel_middle1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"               
                android:gravity="center_vertical" >

                <kankan.wheel.widget.WheelView
                    android:id="@+id/mm"
                    android:layout_width="fill_parent"
                    android:layout_height="126.0dip"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/mmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="分"
                    />

            </RelativeLayout>

            
        </LinearLayout>
 
        <LinearLayout
            android:id="@+id/linearLayoutWeeklyMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/alarm_weekly"
                android:textColor="#fff0f000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvAlarmWeekly"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#fffafaf0"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutAwakeGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/alarm_gameEnable"
                android:textColor="#fff0f000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/awakeGame"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#fffafaf0"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutAlarmName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/alarm_name"
                android:textColor="#fff0f000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvAlarmName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#fffafaf0"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutOccurs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/alarm_occurs"
                android:textColor="#fff0f000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvAlarmOccurs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#fffafaf0"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutRingMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/alarm_ring_mode"
                android:textColor="#fff0f000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvRingMode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#fffafaf0"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutAlarmSetButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/btFinish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/finish" />

        <Button
            android:id="@+id/btBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/back" />
    </LinearLayout>

</RelativeLayout>